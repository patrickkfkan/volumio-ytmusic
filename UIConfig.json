{
  "page": {
    "label": "TRANSLATE.YTMUSIC_CONFIGURATION"
  },
  "sections": [
    {
      "id": "section_i18n",
      "element": "section",
      "label": "TRANSLATE.YTMUSIC_SECTION_I18N",
      "icon": "fa-globe",
      "onSave": {
        "type": "controller",
        "endpoint": "music_service/ytmusic",
        "method": "configSaveI18n"
      },
      "saveButton": {
        "label": "TRANSLATE.YTMUSIC_SAVE",
        "data": [
          "region",
          "language"
        ]
      },
      "content": [
        {
          "id": "region",
          "element": "select",
          "label": "TRANSLATE.YTMUSIC_REGION",
          "value": {},
          "options": []
        },
        {
          "id": "language",
          "element": "select",
          "label": "TRANSLATE.YTMUSIC_LANGUAGE",
          "value": {},
          "options": []
        }
      ]
    },
    {
      "id": "section_account",
      "element": "section",
      "label": "TRANSLATE.YTMUSIC_SECTION_ACCOUNT",
      "icon": "fa-user",
      "content": []
    },
    {
      "id": "section_autoplay",
      "element": "section",
      "label": "TRANSLATE.YTMUSIC_SECTION_AUTOPLAY",
      "icon": "fa-play",
      "onSave": {
        "type": "controller",
        "endpoint": "music_service/ytmusic",
        "method": "configSaveAutoplay"
      },
      "saveButton": {
        "label": "TRANSLATE.YTMUSIC_SAVE",
        "data": [
          "autoplay",
          "autoplayClearQueue"
        ]
      },
      "content": [
        {
          "id": "autoplay",
          "element": "switch",
          "label": "TRANSLATE.YTMUSIC_AUTOPLAY",
          "doc": "TRANSLATE.YTMUSIC_DOC_AUTOPLAY",
          "value": false
        },
        {
          "id": "autoplayClearQueue",
          "element": "switch",
          "label": "TRANSLATE.YTMUSIC_AUTOPLAY_CLEAR_QUEUE",
          "doc": "TRANSLATE.YTMUSIC_DOC_AUTOPLAY_CLEAR_QUEUE",
          "value": false,
          "visibleIf": {
            "field": "autoplay",
            "value": true
          }
        }
      ]
    }
  ]
}
